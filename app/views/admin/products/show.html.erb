<div class="col-md-12">
  <div class="product-thumbnail">
    <div class="row">
      <div class="col-md-6">
        <%= image_tag @product.image.url, class: "img-respond" %>
      </div>
      <div class="col-md-6">
        <div class="box">
          <h2 class="text-center"><%= @product.title %></h2>
          <p class="product-price text-center">
            <%= currency_for @product %><span></span>
          </p>
          <div id="product-rating" class="product-rating text-center">
            <%= render "ratings/rating_form" %>
          </div>
          <p class="text-center buttons">
            <%= link_to edit_admin_product_path(@product),
              class: "btn btn-info" do %>
            <i class="material-icons">edit</i><%= t "admin.product.table.edit" %>
            <% end %>
            <%= link_to admin_product_path(@product), method: :delete,
              data: {confirm: t("admin.product.table.delete_confirm")},
              class: "btn btn-danger" do %>
            <i class="material-icons">delete</i><%= t "admin.product.table.delete" %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-11">
        <div class="details">
          <blockquote>
            <h4>Product details</h4>
            <div class="product-description">
              <%= @product.description %>
            </div>
          </blockquote>
        </div>
      </div>
    </div>
  </div>
</div>
