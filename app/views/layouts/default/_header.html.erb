               <a href="#" role="tab" data-toggle="tab">
                  <div id="notification">
                     <% if cart_total_items %>
                     <span class="notification-bubble"><%= cart_total_items %></span>
                     <% end %>
                  </div>
                  <i class="fa fa-shopping-cart"></i>
                  <%= t "app.user.your_cart" %>
               </a>
            </li>
         </ul>
         <ul class="nav navbar-nav pull-right">
            <form class="form-inline form-search">
               <input type="text" class="form-control" placeholder="<%= t "app.search_for" %>">
               <button class="btn btn-round btn-just-icon" type="button">
               <i class="fa fa-search"></i>
               </button>
