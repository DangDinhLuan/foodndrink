<h2><%= t "user_mailer.custommer_order.title" %> <%= @order.name %></h2>
<p class="text-muted"><%= t "user_mailer.custommer_order.body" %> <%= @order.created_at %></p>
<table class="m_7986748672540615154feature-table-2" border="0" width="680" cellspacing="0" cellpadding="5" style="border:1px solid #dee2e3">
  <tbody>
    <tr>
      <td style="font-size:12px;font-family:Arial,Helvetica,sans-serif;background:#dceff5;font-weight:bold;text-align:center">
          <div align="left"><%= t "user_profile.order_detail.product" %></div>
      </td>
      <td style="font-size:12px;font-family:Arial,Helvetica,sans-serif;background:#dceff5;font-weight:bold;text-align:center">
          <div align="left"><%= t "user_profile.order_detail.quantity" %></div>
      </td>
      <td style="font-size:12px;font-family:Arial,Helvetica,sans-serif;background:#dceff5;font-weight:bold;text-align:center">
          <div align="left"><%= t "user_profile.order_detail.price" %></div>
      </td>
      <td style="font-size:12px;font-family:Arial,Helvetica,sans-serif;background:#dceff5;font-weight:bold;text-align:center">
          <div align="left"><%= t "user_profile.order_detail.total" %></div>
      </td>
    </tr>
    <% @items.each do |item| %>
      <tr>
        <td valign="top" style="font-size:11px;font-family:Arial,Helvetica,sans-serif;border-bottom:1px solid #dee2e3">
          <div align="left"><%= item.product.title  %></div>
        </td>
        <td valign="top" style="font-size:11px;font-family:Arial,Helvetica,sans-serif;border-bottom:1px solid #dee2e3">
          <div align="left"><%= item.quantity %></div>
        </td>
        <td valign="top" style="font-size:11px;font-family:Arial,Helvetica,sans-serif;border-bottom:1px solid #dee2e3">
          <div align="left">$<%= item.price %></div>
        </td>
        <td valign="top" style="font-size:11px;font-family:Arial,Helvetica,sans-serif;border-bottom:1px solid #dee2e3">
          <div align="left">$<%= item.quantity * item.price %></div>
        </td>
      </tr>
    <% end %>
    <tr>
      <td style="font-size:12px;font-family:Arial,Helvetica,sans-serif;font-weight:bold;text-align:center">
        <div align="left"><%= t "user_mailer.custommer_order.total" %></div>
      </td>
      <td colspan="2"></td>
      <td style="font-size:12px;font-family:Arial,Helvetica,sans-serif;font-weight:bold;text-align:center">
        <div align="left">$<%= @order.total %></div>
      </td>
    </tr>
  </tbody>
</table>
